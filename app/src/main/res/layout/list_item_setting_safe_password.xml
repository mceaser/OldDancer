<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/RelativeLayout"
        android:background="#e64848">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/button"
            android:layout_marginLeft="15dp"
            android:background="@drawable/smaller1"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="重置密码"
            android:textColor="#ecf0f1"
            android:textSize="20sp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/editText_old"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:hint="请输入旧密码"
        android:textColorHint="#e9e8e8"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPassword"
        android:layout_below="@+id/RelativeLayout"/>

    <EditText
        android:id="@+id/editText_new"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:hint="请输入新密码"
        android:textColorHint="#e9e8e8"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPassword"
        android:layout_below="@+id/editText_old"/>
    <EditText
        android:id="@+id/editText_again"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:hint="请再次输入新密码"
        android:textColorHint="#e9e8e8"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPassword"
        android:layout_below="@+id/editText_new"/>

    <Button
        android:id="@+id/button_sure"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#e64848"
        android:text="确定"
        android:textColor="#ecf0f1"
        android:textSize="18sp"
        android:layout_below="@+id/editText_again"/>


</RelativeLayout>
