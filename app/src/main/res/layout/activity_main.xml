<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.olddancer.MainActivity">

<RelativeLayout
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <TextView
        android:id="@+id/txt_topbar"
        android:gravity="center_horizontal"
        android:text="search"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C2C2C2"
        android:layout_alignParentBottom="true"/>
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_home"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/exercise"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_knowledge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_konwledge"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/knowledge"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_user"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/mine"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />
    </LinearLayout>


    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C2C2C2"
        android:layout_above="@id/ly_tab_bar"/>

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>
