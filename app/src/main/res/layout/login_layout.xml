<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login4">

    <ImageView
        android:id="@+id/square_dancing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/square_dancing"/>
    <RelativeLayout
        android:id="@+id/login_relativeLayout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/square_dancing">
        <ImageView
            android:id="@+id/login_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/login_user"/>
        <EditText
            android:id="@+id/user_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="#0000000"
            android:hint="请输入用户名"/>
    </RelativeLayout>

</RelativeLayout>
